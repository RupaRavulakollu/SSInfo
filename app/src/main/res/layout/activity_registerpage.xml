<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"

        android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/logo"
        android:layout_gravity="center"
        android:src="@drawable/ssinfo"
        />



        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        android:drawablePadding="10dp"
        android:drawableTint="@android:color/black"
        android:inputType="text"
        android:hint="Name"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"/>
        </android.support.design.widget.TextInputLayout>
    


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/DOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="DOB(dd/mm/yy)"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@android:color/black"
            android:textColorHint="@android:color/black" />

        </android.support.design.widget.TextInputLayout>
        </RelativeLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/gmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@android:color/black"
            android:hint="Mail Id"
            android:inputType="textEmailAddress"

            android:padding="10dp"
            android:textColorHint="@android:color/black" />
    </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mobile"
                android:padding="10dp"
                android:inputType="phone"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawablePadding="10dp"
                android:drawableTint="@android:color/black"

                android:hint="Mobile number"
                android:textColorHint="@android:color/black"/>
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:padding="10dp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_https_black_24dp"
                android:drawablePadding="10dp"
                android:drawableTint="@android:color/black"
                android:hint="Enter the new password"
                android:textColorHint="@android:color/black"/>
        </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <EditText
            android:id="@+id/designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@android:color/black"
            android:hint="Designation"
            android:padding="10dp"
            android:textColorHint="@android:color/black" />
    </android.support.design.widget.TextInputLayout>
        
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/institution"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@android:color/black"
            android:inputType="text"
            android:hint="Institution with address and phone"
            android:textColorHint="@android:color/black"/>
        
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >



        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:drawableLeft="@drawable/address"
            android:drawablePadding="10dp"
            android:drawableTint="@android:color/black"
            android:hint="Address for Communication"
            android:padding="10dp"
            android:textColorHint="@android:color/black" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/qualificaton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:drawableLeft="@drawable/department"
            android:drawablePadding="10dp"
            android:drawableTint="@android:color/black"
            android:hint="Department"
            android:padding="10dp"
            android:textColorHint="@android:color/black" />
        </android.support.design.widget.TextInputLayout>
            
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:drawableLeft="@drawable/year"
            android:drawablePadding="10dp"
            android:drawableTint="@android:color/black"
            android:hint="Year"
            android:padding="10dp"
            android:textColorHint="@android:color/black" />
        </android.support.design.widget.TextInputLayout>


        <RadioGroup
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/radioGroup">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/intern"
                android:text="CIT"
                android:layout_gravity="left"/>
            <android.support.v4.widget.Space
                android:layout_width="15dp"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ext"
                android:text="OTHER COLLEGE"
                android:layout_gravity="right"/>


        </RadioGroup>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/submit"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:backgroundTint="#0097A7"/>




    </LinearLayout>

    </ScrollView>

</RelativeLayout>
